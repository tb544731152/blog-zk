/* pages/address/address.wxss */

.title{
  float: left;
  width: 130rpx;
  color: #333;
  font-size: 30rpx;
   line-height: 60rpx;
  margin-top: 14rpx;
}
.content{
  float: left;
  color: #333;
  font-size: 30rpx;
   line-height: 60rpx;
  margin-top: 14rpx;
  width: 530rpx;
}
.content input{
  color: #333;
  font-size: 30rpx;
   line-height: 60rpx;
  width: 100%;
  display: inline-block;
}
.box{
  height: 88rpx;
  line-height: 88rpx;
  margin:0 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e6e6e6;
   
  
}
.box1{
 height: 200rpx;
 margin:0 20rpx;
}
.box1 textarea{
 height: 200rpx;
 width: 530rpx;
 line-height: 60rpx;
}

.bg{
background-color: #fff;
}
.hint{
  color: #999;
  font-size: 20rpx;
  margin-left: 20rpx;
  line-height: 40rpx;
  clear: both;
  margin-top: 20rpx;
}
.save{
  width: 540rpx;
	height: 88rpx;
  line-height: 88rpx;
  margin-top: 180rpx;
	background-image: linear-gradient(-90deg, 
		#fa544e 0%, 
		#ff7302 100%), 
	linear-gradient(
		#f9645a, 
		#f9645a);
	border-radius: 44rpx;
  color: #fff;
  font-size: 30rpx;
}
/*省市区 */
.animation-element-wrapper {
  display: flex;  
  position: fixed;
  left: 0;
  top:0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.6);
}
.animation-element {
  display: flex;
  position: fixed;
  width: 100%;
  height: 470rpx;
  bottom: 0;
  background-color: rgba(255, 255, 255, 1);
}
.animation-button {
  margin-top: 20rpx;
  top:20rpx;
  width: 400rpx;
  height: 100rpx; 
  line-height: 100rpx; 
  align-items:center;
}
text{
  color: #999999;
  display: inline-flex;  
  position: fixed;
  margin-top: 20rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 34rpx;
  font-family: Arial, Helvetica, sans-serif;
}
.left-bt{
  left: 30rpx;
}
.right-bt {
  right: 30rpx;
}
.line{
  display: block;
  position: fixed;
  height: 1rpx;
  width: 100%;
  margin-top: 89rpx; 
  background-color: #eeeeee;
}

page{
  background-color: rgba(255, 255, 255, 1); 
}

.infoText{
    margin-top: 20rpx;
    text-align: center;
    width: 100%;
    justify-content: center; 
}

picker-view{
  background-color: white;
  padding: 0;
  width: 100%; 
  height: 380rpx;
  bottom: 0;
  position: fixed;
}

picker-view-column view{
  vertical-align:middle; 
  font-size: 28rpx;
  line-height: 28rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
